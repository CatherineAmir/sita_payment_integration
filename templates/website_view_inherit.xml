<?xml version="1.0" encoding="utf-8"?>

<odoo>

	<template id="inherit_website_layout" name="website_mbi_inherit" inherit_id="website.footer_custom">
        <xpath expr="//div[@id='footer']" position="replace">

        </xpath>
    </template>
    <template id="pay_remove_contact_us" name="Remove Contact US" inherit_id="website.template_header_default_oe_structure_header_default_1">
        <xpath expr="//div[@id='oe_structure_header_default_1']" position="replace">
            <a href="/web/login" class="font-weight-bold">Sign in</a>
            <div style="width:5%;"/>
            <image src="/sita_payment_integration/static/src/img/patros.png" style="width:200px;" class="logo" alt="patros"/>
        </xpath>
    </template>


    <template id="option_header_brand_logo_mbi" inherit_id="website.placeholder_header_brand" name="Header Brand Logo" active="True">
    <xpath expr="//a" position="replace">
         <div style="width:5%;"/>
        <image   src="/sita_payment_integration/static/src/img/sita.png" class="logo" >
            <div style="width:5%;"/>
        </image>


    </xpath>
    </template>


    <template id="remove_nav_bar" inherit_id="website.template_header_default" name="navbar_nav_removal">
        <xpath expr="//t[@t-call='website.navbar_toggler']" position="replace">


        </xpath>
    </template>

    <template id="inherit_footer" name="sita footer" inherit_id="website.layout">
            <xpath expr="//footer//span[hasclass('o_footer_copyright_name')]" position="replace">
        <span class="o_footer_copyright_name mr-2">Copyright &amp;copy; SITA-EG</span>
            </xpath>
    </template>
     <template inherit_id="web.brand_promotion_message" name="Sita Promotion Message" id="sita_footer">
        <xpath expr="//t[@t-set='odoo_logo']" position="replace">
        <t t-set="sita_logo">
            <a target="_blank"
                t-attf-href="https://sita-eg.com/"
                class="badge badge-light">
                <img alt="Sita"
                        src="/sita_payment_integration/static/src/img/sita.png"
                        style="height: 1em; vertical-align: baseline;"/>
            </a>
        </t>
        </xpath>
         <xpath expr="//t[@t-set='final_message']" position="replace">
        <t t-set="final_message">Powered by %s%s</t>

         </xpath>
         <xpath expr="//t[@t-raw]" position="replace">
        <t t-raw="final_message % (sita_logo, _message and ('- %s' % _message) or '')"/>

        </xpath>
    </template>

    <template id="remove_sign_up" inherit_id="auth_signup.login" name="remove_sign_up">
        <xpath expr="//div[hasclass('justify-content-between')]" position="replace">

        </xpath>
    </template>



</odoo>